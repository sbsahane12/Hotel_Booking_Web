<% layout("/layouts/boilerplate") %>

    <body>
        <h3>All Listing</h3>
        <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->


        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 ">
            <% for( let listing of allListings ) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card ">
                        <img class="card-img-top" src="<%=listing.image.url%>" alt="Listing Img" style=" height: 20rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <b> <p class="card-text"><%= listing.title %></b><br> &#8377;
                            <%= listing.price.toLocaleString("en-IN") %> <br/>
                                </p>
                        </div>
                    </div>
                </a>

                <% } %>
        </div>
    </body>