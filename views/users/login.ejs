<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3 mt-3">Sign In</h1>
        <div class="col-6 offset-3">
            <form method="POST" action="/login" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="mt-2 mb-2" for="username">Username</label>
                    <input name="username" id="username" placeholder="Enter Username" type="text " class="form-control" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="mt-2 mb-2" for="email">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required minlength="8">
                    <div class="invalid-feedback">Password must be at least 8 characters long.</div>
                </div>
                <button class="btn btn-outline-danger">Sign In</button>
                <a class="btn btn-outline-danger" href="/signup">Sign Up</a>
            </form>
        </div>
    </div>